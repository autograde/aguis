{
    "compilerOptions": {
        "outDir": "./dist/",
        "module": "commonjs",
        "target": "es2015",
        // "forceConsistentCasingInFileNames": true,
        // "noImplicitReturns": true,
        // "strict": true,
        // "noUnusedLocals": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "jsx": "react",
